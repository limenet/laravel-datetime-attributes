{
  "name": "limenet/laravel-datetime-attributes",
  "description": "Set a datetime attribute separately using a date and a time. This is especially helpful for input[type=date] and input[type=time].",
  "type": "library",
  "require": {
    "illuminate/database": "^9.0 || ^10.0",
    "nesbot/carbon": " ^2.0",
    "php": "^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "bamarni/composer-bin-plugin": "^1.5",
    "nunomaduro/larastan": "^2.0",
    "orchestra/testbench": "^8.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Linus Metzler",
      "email": "hi@linusmetzler.me"
    }
  ],
  "autoload": {
    "psr-4": {
      "limenet\\": "src/limenet/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "limenet\\": "tests/limenet"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bin all update --ansi"
    ],
    "ci-lint": [
      "./vendor/bin/php-cs-fixer fix --diff",
      "./vendor/bin/phpstan analyse -vvv --memory-limit 1G"
    ]
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true
    }
  }
}
